{
	"extends": "@tsconfig/node16-strictest-esm",
	"compilerOptions": {
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": ["es2021", "DOM", "DOM.Iterable", "WebWorker"],
		"moduleResolution": "node",
		"noImplicitAny": false,
		"resolveJsonModule": true,
		"skipLibCheck": true
	},
	"exclude": ["**/*.md", "**/dist", "**/node_modules", "**/public/**", "/scripts"]
}
